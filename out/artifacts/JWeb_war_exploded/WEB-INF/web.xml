<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd"
         version="3.1">
    <listener>
        <listener-class>com.jweb.config.InitDAOFactory</listener-class>
    </listener>
    <servlet>
        <servlet-name>ShowProduct</servlet-name>
        <servlet-class>com.jweb.servlets.ShowProduct</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>RegisterMember</servlet-name>
        <servlet-class>com.jweb.servlets.RegisterMember</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListMembers</servlet-name>
        <servlet-class>com.jweb.servlets.ListMembers</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ConnectMember</servlet-name>
        <servlet-class>com.jweb.servlets.ConnectMember</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CreateNews</servlet-name>
        <servlet-class>com.jweb.servlets.CreateNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>UpdateMember</servlet-name>
        <servlet-class>com.jweb.servlets.UpdateMember</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>DeleteMember</servlet-name>
        <servlet-class>com.jweb.servlets.DeleteMember</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ListNews</servlet-name>
        <servlet-class>com.jweb.servlets.ListNews</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>Logout</servlet-name>
        <servlet-class>com.jweb.servlets.Logout</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Logout</servlet-name>
        <url-pattern>/admin/logout</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListNews</servlet-name>
        <url-pattern>/news</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>RegisterMember</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ConnectMember</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ListMembers</servlet-name>
        <url-pattern>/admin/members</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CreateNews</servlet-name>
        <url-pattern>/admin/news/new</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>DeleteMember</servlet-name>
        <url-pattern>/admin/members/delete</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>UpdateMember</servlet-name>
        <url-pattern>/admin/members/update</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ShowProduct</servlet-name>
        <url-pattern>/product</url-pattern>
    </servlet-mapping>
    <welcome-file-list>
        <welcome-file>news</welcome-file>
    </welcome-file-list>
    <filter>
        <filter-name>RestrictionFilter</filter-name>
        <filter-class>com.jweb.filters.RestrictionFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RestrictionFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
    </filter-mapping>

</web-app>